<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, format: 'jpg', size: "90x100", fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
       <tr>
         <th>
           <strong>Name</strong>
         </th>
        <th>
           <strong><%= user.name %></strong>
        </th>
       </tr>
       <tr>
        <th>
          <strong>introduction</strong>
        </th>
        <th>
          <strong><%= user.introduction %></strong>
        </th>
       </tr>
      </tbody>
    </table>
    <div class="row">
      <% if user == current_user %>
        <%= link_to edit_user_path(current_user.id),class: 'btn btn-outline-secondary btn-block' do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      <% else %>
        <%= link_to edit_user_path(user.id),class: 'btn btn-outline-secondary btn-block' do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>
    </div>
    <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
      <%= f.submit 'Create Book', class: 'btn btn-success btn-sm md-3 text-light' %>
     <% end %>