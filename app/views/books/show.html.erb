
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>


<%= render 'books/new', user: @user, book: @newbook %>

<h2>Book detail</h2>

<table>
    <tr>
     <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
     <td><%= link_to @book.title %></td>
     <td><%= @book.body %></td>
     <td>
         <% if @book.user == current_user %>
         <%= link_to "Edit", edit_book_path(@book.id) %></td>
         <% end %>
     <td>
         <% if @book.user == current_user %>
         <%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？" %></td>
         <% end %>
    </tr>
</table>