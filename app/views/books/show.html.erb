<main>
  <% if flash[:notice] %>
   <p id="notice">
   <%= flash[:notice] %>
   </p>
  <% end %>
  <div class="container px-5 px-sm-0">
      <div class="row">
          <div class="col-md-3">
            <%= render 'books/new', user: @user, book: @newbook %>
          </div>

          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @user, :profile_image, format: 'jpg', size: "90x100", fallback: "no_image.jpg"%><br>
                  <%= @user.name %>
                  <% end %>
                </td>
                <td><%= link_to @book.title %></td>
                <td><%= @book.body %></td>
                <td>
                  <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success btn-sm md-3 text-light' %>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" => "本当に消しますか？", class: 'btn btn-danger btn-sm md-3 text-light' %>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
      </div>
  </div>
</main>