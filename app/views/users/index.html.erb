
<%= render 'books/new', user: @user, book: @book %>

<h2>Users</h2>

<table>
  <thead>
    <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <% @users.each do |user| %>
    <tr>
     <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
     <td><%= user.name %></td>
     <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
  <% end %>
</table>